<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="app.khodko.catfood.ui.products.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_filter"
            app:destination="@id/nav_filter" />
    </fragment>

    <fragment
        android:id="@+id/nav_filter"
        android:name="app.khodko.catfood.ui.products.FilterProductsFragment"
        android:label="@string/title_filter"
        tools:layout="@layout/fragment_filter_products" />

    <fragment
        android:id="@+id/nav_search"
        android:name="app.khodko.catfood.ui.products.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="app.khodko.catfood.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_info"
        android:name="app.khodko.catfood.ui.info.InfoFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_info" />

</navigation>